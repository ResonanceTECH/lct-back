{
	"name": "lct-backend",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "ISC",
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "dotenv -e .env.dev -- nest start --debug --watch",
		"start:prod": "node dist/src/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"prettier": "prettier . --check",
		"prettier:fix": "prettier . --write",
		"lint-staged": "lint-staged",
		"prepare": "husky",
		"migration:generate": "npm run build && npx typeorm -d dist/src/core/database/sql/sql.config.js migration:generate src/core/database/sql/migrations/%npm_config_name%",
		"migration:create": "npx typeorm migration:create ./src/core/database/sql/migrations/%npm_config_name%",
		"migrate:up": "npx typeorm migration:run -d /app/dist/src/core/database/sql/sql.config.js",
		"migrate:status": "npx typeorm migration:show -d dist/src/core/database/sql/sql.config.js",
		"migrate:revert": "npx typeorm migration:revert -d dist/src/core/database/sql/sql.config.js",
		"migrate:local:up": "npm run build && npm run migrate:up",
		"migrate:local:status": "npm run build && npm run migrate:status",
		"migrate:local:revert": "npm run build && npm run migrate:revert"
	},
	"dependencies": {
		"@fastify/cookie": "^11.0.2",
		"@fastify/multipart": "^9.2.1",
		"@fastify/static": "^8.1.1",
		"@nestjs/common": "^11.1.0",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.1.0",
		"@nestjs/jwt": "^11.0.0",
		"@nestjs/platform-fastify": "^11.1.0",
		"@nestjs/swagger": "^11.2.0",
		"@nestjs/typeorm": "^11.0.0",
		"@nestjs/websockets": "^11.1.4",
		"@scalar/nestjs-api-reference": "^1.0.2",
		"argon2": "^0.43.0",
		"generate-api-key": "^1.0.2",
		"ioredis": "^5.8.0",
		"moment": "^2.30.1",
		"nestjs-zod": "^4.3.1",
		"pg": "^8.15.6",
		"reflect-metadata": "^0.2.2",
		"swagger-ui-express": "^5.0.1",
		"typeorm": "^0.3.27",
		"zod": "^3.25.76",
		"dotenv": "^17.2.3"
	},
	"devDependencies": {
		"@nestjs/cli": "^11.0.7",
		"@nestjs/schematics": "^11.0.5",
		"@types/node": "^22.15.12",
		"@typescript-eslint/eslint-plugin": "^7.18.0",
		"@typescript-eslint/parser": "^7.18.0",
		"dotenv-cli": "^10.0.0",
		"eslint": "^8.2.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^18.0.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-prettier": "^5.4.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.6",
		"prettier": "^3.5.3",
		"prettier-plugin-organize-imports": "^4.1.0",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.8.3"
	}
}
